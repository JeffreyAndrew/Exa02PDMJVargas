<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jevar.salessystem.view.LoginActivity">

    <RelativeLayout
        android:id="@+id/LoginBtnFacebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtUserLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="315dp"
            android:ems="10"
            android:hint="Username or Email" />

        <EditText
            android:id="@+id/txtPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtUserLogin"
            android:layout_alignRight="@+id/txtUserLogin"
            android:layout_below="@+id/txtUserLogin"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:password="true"
            android:hint="Password"
            />

        <Button
            android:id="@+id/btnLogInLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="Log In" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPassLogin"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Create Account" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPassLogin"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:text="Forget your password?" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_login" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
