<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jevar.salessystem.view.MainActivity">

    <TextView
        android:id="@+id/userRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"/>

    <ImageButton
        android:id="@+id/btnRegisterProdMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/btnPurchaseMain"
        app:srcCompat="@drawable/ic_message"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="159dp" />

    <ImageButton
        android:id="@+id/btnPurchaseMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnRegisterProdMain"
        android:layout_marginEnd="46dp"
        app:srcCompat="@drawable/ic_person"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="159dp" />

    <ImageButton
        android:id="@+id/btnPollMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/btnRegisterProdMain"
        android:layout_below="@+id/btnRegisterProdMain"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_poll" />

    <ImageButton
        android:id="@+id/btnCourseMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/btnPurchaseMain"
        android:layout_alignTop="@+id/btnPollMain"
        app:srcCompat="@drawable/ic_course" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegisterProdMain"
        android:layout_alignStart="@+id/btnRegisterProdMain"
        android:text="Registrar Producto" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegisterProdMain"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp"
        android:text="Comprar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnPollMain"
        android:layout_marginStart="83dp"
        android:text="Ver Compras" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/btnPollMain"
        android:text="Otro" />


</RelativeLayout>
